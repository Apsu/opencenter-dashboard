extends layout
extends navbar
block body
  .container-fluid
    .row-fluid
      .span2
        ul.nav.nav-list(data-bind='foreach: nodes')
          // ko if: $index() === 0
          li.nav-header Nodes
          // /ko
          li(data-bind='click: $parent.node, css: {active: $parent.node() === $data}')
            a(href='#', data-bind='text: name')
      .span5
        h4(data-bind='if: adventures().length') Actions
        dl.dl-horizontal(data-bind='foreach: adventures')
          a(href='#', data-bind='click: $parent.adventurate')
            dt(data-bind='text: id')
            dd(data-bind='text: name')
      .span5
        h4(data-bind='if: nProp().length') Details
        dl.dl-horizontal(data-bind='foreach: nProp')
          // ko if: value && !(key == 'config')
          dt(data-bind='text: key')
          dd(data-bind='text: value')
          // /ko
